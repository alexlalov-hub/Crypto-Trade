<main>
    <section id="details-info">
        <h1>Details</h1>
        <div class="coin-image">
            <img src="{{image}}">
        </div>

        <div class="coin-info">
            <div class="coin-text">
                <h1 id="name">{{name}}</h1>
                <h3 id="payment">Payment method: {{paymentMethod}}</h3>
                <p id="price"><span>Price: ${{price}}</span></p>
                <p id="description">{{cryptoDescription}}</p>
            </div>
            {{#if user}}
            <div class="product-btn">
                {{#if isOwner}}
                <div class="author">
                    <a href="/edit/{{_id}}" class="btn-edit">Edit</a>
                    <a href="/delete/{{_id}}" class="btn-delete">Delete</a>
                </div>
                {{else}}
                {{#if hasBought}}
                <p class="buy-message">You already bought these crypto coins.</p>
                {{else}}
                <a href="/buy/{{_id}}" class="btn-buy">Buy</a>
                {{/if}}
                {{/if}}
            </div>
            {{/if}}
        </div>
    </section>
</main>
<main>
    {{#if error}}
    <div>
        <div class="errorContainer">
            <p>{{error}}</p>
        </div>
    </div>
    {{/if}}
    <section id="edit-container">
        <div class="edit-container-info">
            <h1>Edit Announcement</h1>
            <form method="post">
                <label>Name:</label>
                <input type="text" id="name" name="name" value="{{crypto.name}}">
                <label>Image:</label>
                <input type="text" id="image" name="image" value="{{crypto.image}}">
                <label>Price:</label>
                <input type="number" id="price" name="price" value="{{crypto.price}}">
                <label>Description:</label>
                <textarea name="cryptoDescription" id="description">{{crypto.cryptoDescription}}</textarea>
                <label>Payment method:</label>
                <select id="payment" name="paymentMethod">
                    <option value="crypto-wallet" {{#if crypto.methodcrypto}}selected{{/if}}>Crypto Wallet
                    </option>
                    <option value="credit-card" {{#if crypto.methodcreadit}}selected{{/if}}>Credit Card</option>
                    <option value="debit-card" {{#if crypto.methoddebit}}selected{{/if}}>Debit Card</option>
                    <option value="paypal" {{#if crypto.methodpaypal}}selected{{/if}}>PayPal</option>
                </select>
                <input type="submit" id="btn" value="EDIT"></input>
            </form>
        </div>
    </section>
</main>